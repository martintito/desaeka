{% extends '::consultor.html.twig' %}

{% block id 'customer' %}
{% block title %}Definición de cliente{% endblock %}

{% block article %}

<div id="wrap">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12 content">
                <h2>{{ block('title') }}</h2>
                <br>
                <br>
                <div class="row-fluid">
                    <table class="record_properties">
                        <tbody>
                            <tr>
                                <th class="span3">Nombre :</th>
                                <td class="span4">{{ entity.name }}</td>
                            </tr>
                            <tr>
                                <th class="span3">RUC :</th>
                                <td class="span4">{{ entity.ruc }}</td>
                            </tr>
                            <tr>
                                <th class="span3">Razón Social :</th>
                                <td class="span4">{{ entity.razonsocial }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br>
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('enterprise_homepage') }}">
                            Volver al listado de clientes
                        </a>
                    </li>
                    <li>
                        <a  href="{{ path('enterprise_edit', { 'id': entity.id }) }}">
                            Modificar cliente
                        </a>
                    </li>
                </ul>
                <br>
                <br>
            </div>
        </div>
    </div>
</div>
{% endblock %}
