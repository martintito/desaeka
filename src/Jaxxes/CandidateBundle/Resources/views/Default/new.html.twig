{% extends '::consultor.html.twig' %}
{% block id 'candidate' %}
{% block title %}Definición de candidato{% endblock %}

{% block article %}

<div id="wrap">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12 content">
                <h2>{{ block('title') }}</h2>
                <br>
                <br>
                <div class="row-fluid">
                    {{ form_start(form, { 'action': path('candidate_create') }) }}  
                        <fieldset>
                            <div class="row-fluid">
                                <table class="record_properties">
                                    <tbody>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th width="150px">Nombre :</th>
                                            <td width="720px">{{ form_widget(form.firstName ) }}</td>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th  colspan=2 height="10px"></th>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th width="150px">Apellido :</th>
                                            <td width="720px">{{ form_widget(form.lastName ) }}</td>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th  colspan=2 height="10px"></th>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th width="150px">Género :</th>
                                            <td width="720px">{{ form_widget(form.gender ) }}</td>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th colspan=2 height="10px"></th>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th width="150px">Fecha Nacimiento :</th>
                                            <td width="720px">{{ form_widget(form.birthDate ) }}</td>
                                        </tr>
                                        <tr>
											<td width="40px" ></td>
                                            <th width="150px"></th>
                                            <td width="720px" style="color:blue">{{ mensaje }}</td>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th colspan=2 height="10px"></th>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th width="150px">Correo Electrónico :</th>
                                            <td width="720px">{{ form_widget(form.email ) }}</td>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th colspan=2 height="10px"></th>
                                        </tr>
                                        
                                        <tr> 
                                            <td width="40px" ></td>
                                            <td colspan=2 >{{ form_widget(form.guardar ) }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </fieldset>
                    {{ form_end(form) }}
                    
                </div>
                <br>
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('candidate_homepage') }}">
                            Volver al listado de candidatos
                        </a>
                    </li>
                </ul>
                <br>
                <br>
            </div>
        </div>
    </div>
</div>
{% endblock %}
