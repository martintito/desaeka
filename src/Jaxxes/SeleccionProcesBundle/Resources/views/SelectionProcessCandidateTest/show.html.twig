{% extends '::candidate.html.twig' %}

{% block id 'seleccionprocess' %}
{% block title %}Proceso de evaluación{% endblock %}

{% block article %}

<div id="wrap">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12 content">
                <br>
                <h2>{{ block('title') }}</h2>
                
                <div class="row-fluid">
                    <table class="record_properties">
                        <tbody>
                            <tr> 
                                <td width="40px" ></td>
                                <th width="120px">Candidato :</th>
                                <td width="520px">{{ entity.candidate.firstName }} {{ entity.candidate.lastName }}</td>
                            </tr>
                            <tr> 
                                <td width="10px" ></td>
                                <th  colspan=2 height="10px"></th>
                            </tr>
                            <tr> 
                                <td width="40px" ></td>
                                <th width="120px">Cargo :</th>
                                <td width="520px">{{ entity.selectionProcess }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br>
                <br>
                <div class="row-fluid">
                    <div class="span1"></div>
                    <div class="span9">
                        <div class="span9">
                            <h4>Listado de pruebas a realizar</h4>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span1"></div>
                    <div class="span5">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="span7">Prueba</th>
                                    <th class="span7">Tiempo</th>
                                    <th class="span2">Realizado</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for selectionProcessCandidateTest in selectionProcessCandidateTests %}
                                <tr>
                                    <td class="span7">{{ selectionProcessCandidateTest.selectionProcessTest.definitionTest.name }}</td>
                                    <td class="span7">{{ selectionProcessCandidateTest.selectionProcessTest.definitionTest.time }} minutos</td>
                                    <td class="span7">
                                        {% if selectionProcessCandidateTest.realized %}
                                            <img alt="Fotografía"  width="20px" height="10px"  src="{{ asset(directorio_imagenes_jaxxes ~ 'check.jpg') }}">
                                        {% else %}
                                            <img alt="Fotografía"  width="20px" height="10px"  src="{{ asset(directorio_imagenes_jaxxes ~ 'menos.jpg') }}">
                                        {% endif %}
                                    </td>
                                    
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                </div>
                <br>
                <br>
                
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('sp_candidato_test_make') }}">
                            Resolver Prueba
                        </a>
                    </li>
                </ul>
                
                <br>
                <br>
            </div>
        </div>
    </div>
</div>
{% endblock %}
