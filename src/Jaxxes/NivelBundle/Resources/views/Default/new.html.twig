{% extends '::consultor.html.twig' %}
{% block id 'seleccionprocess' %}
{% block title %}Definición de Nivel{% endblock %}

{% block article %}

<div id="wrap">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12 content">
                <br>
                <h2>{{ block('title') }}</h2>
                <br>
                <br>
                <div class="row-fluid">
                    {{ form_start(form, { 'action': path('nivel_create') }) }}  
                        <fieldset>
                            <div class="row-fluid">
                                <table class="record_properties">
                                    <tbody>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th width="120px">Nombre :</th>
                                            <td width="720px">{{ form_widget(form.name ) }}</td>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th  colspan=2 height="10px"></th>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th width="120px">Descripción :</th>
                                            <td width="720px">{{ form_widget(form.descr ) }}</td>
                                        </tr>
                                        <tr> 
                                            <td width="40px" ></td>
                                            <th colspan=2 height="10px"></th>
                                        </tr>
                                        
                                        <tr> 
                                            <td width="40px" ></td>
                                            <td colspan=2 >{{ form_widget(form.guardar ) }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </fieldset>
                    {{ form_end(form) }}
                </div>
                <br>
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('nivel_homepage') }}">
                            Volver al listado
                        </a>
                    </li>
                </ul>
                <br>
                <br>
            </div>
        </div>
    </div>
</div>
{% endblock %}
