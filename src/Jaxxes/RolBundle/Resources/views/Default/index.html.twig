{% extends '::consultor.html.twig' %}

{% block id 'rol' %}
{% block title %}Listado de roles{% endblock %}

{% block article %}
<!--<h1>{{ block('title') }}</h1>-->
<div id="wrap">
    <div class="container-fluid">
        <div class="span12 content">
            <div class="row-fluid">
                <div class="span5">
                    <h2>{{ block('title') }}</h2>
                </div>
                <div class="span7">
                    <a href="{{ path('rol_new') }}" class="btn btn-primary add"  title="Agregar" >
                        <i class="icon-plus icon-large"></i>
                    </a>
                </div>	
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripci√≥n</th>
                        <th>Nivel</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.descripcion }}</td>
                        <td>{{ entity.nivel }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('rol_edit', { 'id': entity.id }) }}" class="edit btn btn-warning" title="Editar"><i class="icon-large icon-edit"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
